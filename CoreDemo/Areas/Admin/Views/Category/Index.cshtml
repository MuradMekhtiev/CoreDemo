@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Make Passive</th>
        <th>Make Active</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID/" id="DeleteBtn" onclick="return confirm('Are you sure?');" class="btn btn-primary">Make Passive</a></td>
            <td><a href="#" class="btn btn-primary">Make Active</a></td>
            <td><a href="#" class="btn btn-primary">Edit</a></td>
        </tr>
    }
</table>

<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-info">New Category</a>


